doctype html
html.h-full
  head
    title ToDoList
    link(rel='stylesheet', type="text/css" , href='css/tailwind.css')
  body
    div(class="w-2/3 lg:w-1/3 border border-2 shadow p-5 rounded-lg mx-auto mt-12 bg-white")
      h1.text-4xl.text-center TODOLIST

      form(method="post")
        input(class="border w-2/3 rounded-lg mt-5 hover:border-slate-300" ,type="text", name="content")
        button(class="w-1/4 border rounded-lg ml-5  hover:border-slate-300", type="submit") Ajouter
      hr.mt-5
      each task in tasks
        div(class="w-full h-15 flex")
          p(class="truncate w-2/3  mt-5 text-xl ") #{task.content}
          button.delete(class="w-1/4 border rounded-lg ml-5 mt-5  hover:border-red-300" ,type='button', data-id=task._id) Supprimer

    script(src="https://code.jquery.com/jquery-3.6.0.min.js")

    script(type="text/javascript", src="js/client.js") 

    